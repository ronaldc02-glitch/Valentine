  }
  .subtitle{
    margin:0 0 22px 0;
    color: #d0d6dd;
  }

  .question{
    display:flex;gap:20px;align-items:center;
    flex-wrap:wrap;
  }

  .btns{
    position:relative;
    width:100%;
    min-height:120px;
    display:flex;
    align-items:center;
    justify-content:center;
  }

  .yes-btn, .no-btn{
    font-weight:700;
    padding:16px 28px;
    border-radius:999px;
