    box-shadow: 0 8px 30px rgba(0,0,0,0.6), inset 0 1px 0 rgba(255,255,255,0.02);
    position:relative;
    overflow:hidden;
  }

  .title{
    font-size: clamp(20px, 3.2vw, 34px);
    margin:0 0 8px 0;
